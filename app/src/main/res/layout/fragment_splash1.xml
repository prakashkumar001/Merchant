<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="@dimen/autocompletetextbox"
        android:src="@drawable/spalsh_background1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/loginbuttonheight"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_slide1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/logopadding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/marginsmall"
                android:gravity="center"
                android:text="Empower your customers with convenient investment access!"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/red_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/marginsmall"
                android:gravity="center"
                android:text="Helping you provide value-added financial investment services to your customers and establishing trust with our platform." />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
